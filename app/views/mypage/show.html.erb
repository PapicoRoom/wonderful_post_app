<p id="notice"><%= notice %></p>


<h1>マイページ</h1>
<%= render partial: "search" %>
<%= link_to '新規投稿', new_article_path, class: "btn btn-dark"  %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">タイトル</th>
      <th scope="col">本文</th>
    </tr>
  </thead>


  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to '詳細', article, class: "btn btn-success" %></td>
        <td><%= link_to '編集', edit_article_path(article), class: "btn btn-warning" %></td>
        <td><%= link_to '削除', article, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
