<p id="notice"><%= notice %></p>


<h1>投稿記事一覧</h1>
<%= link_to '新規作成', new_article_path, class: "btn btn-info" %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">タイトル</th>
      <th scope="col">本文</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td>
            <%= link_to '詳細', article %>
            <%= link_to '編集', edit_article_path(article) %>
            <%= link_to '削除', article, method: :delete, data: { confirm: '本当に削除してよろしいですか?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
