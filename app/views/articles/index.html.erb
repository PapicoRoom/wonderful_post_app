<p id="notice"><%= notice %></p>


<h1>Articles</h1>

<% if user_signed_in? %>
  <%= link_to '新規投稿', new_article_path(@article), class: "btn btn-dark"  %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">タイトル</th>
      <th scope="col">本文</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td>
            <%= link_to '詳細', article, class: "btn btn-success"  %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
